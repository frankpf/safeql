{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es5", "es6", "es2017"],
		"paths": {
			"*": [
				"node_modules/*",
				"src/_vendor/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	]
}
